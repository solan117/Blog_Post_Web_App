<%- include ("partials/header") %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campground from all around the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new"> New Campgrounds</a>
            </p>

        </div>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campgrounds){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img style="resize: both; height: 100%; width: 100%;" src="<%= campgrounds.image %>">
                <div class="caption text-center">
                    <h4> <%= campgrounds.name%> </h4>
                </div>
                <div>
                    <p>
                        <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary" >More Info</a>
                    </p>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<%- include ("partials/footer") %>